---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n';
import { awards } from '../data/awards';
import { contactInfo } from '../data/contact';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout
  title={`${t('awards.title')} | ${t('site.title')}`}
  description={t('awards.subtitle')}
  lang={lang}
>
  <!-- Hero Section -->
  <section class="relative py-20 bg-navy-600 overflow-hidden">
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-0 right-0 w-96 h-96 bg-gold-500 rounded-full blur-3xl"></div>
    </div>
    <div class="container-custom relative z-10">
      <div class="max-w-3xl">
        <span class="text-gold-400 font-semibold text-sm tracking-wider uppercase mb-4 block animate-fade-up">
          Recognition
        </span>
        <h1 class="text-white mb-6 animate-fade-up" style="animation-delay: 0.1s;">
          {t('awards.title')}
        </h1>
        <p class="text-white/70 text-xl animate-fade-up" style="animation-delay: 0.2s;">
          {t('awards.subtitle')}
        </p>
      </div>
    </div>
  </section>

  <!-- Awards Timeline -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="relative max-w-5xl mx-auto">
        <!-- Timeline Line -->
        <div class="absolute left-8 md:left-1/2 top-0 bottom-0 w-0.5 bg-gradient-to-b from-gold-400 via-gold-500 to-navy-600 md:-translate-x-1/2"></div>

        <div class="space-y-16">
          {awards.map((award, index) => (
            <div class={`relative flex items-start gap-8 animate-on-scroll ${index % 2 === 0 ? 'md:flex-row-reverse' : ''}`}>
              <!-- Content Card -->
              <div class={`flex-1 ml-16 md:ml-0 ${index % 2 === 0 ? 'md:pl-8' : 'md:pr-8 md:text-right'}`}>
                <div class="bg-white rounded-2xl shadow-xl p-6 md:p-8 border border-gray-100 hover:border-gold-300 transition-colors group">
                  <!-- Image -->
                  {award.image && (
                    <div class="mb-6 rounded-xl overflow-hidden">
                      <img
                        src={award.image}
                        alt={t(award.titleKey)}
                        class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-500"
                      />
                    </div>
                  )}

                  <!-- Year Badge -->
                  {award.year && (
                    <span class="inline-block px-4 py-1 bg-gold-100 text-gold-600 rounded-full text-sm font-bold mb-4">
                      {award.year}
                    </span>
                  )}

                  <!-- Title -->
                  <h3 class="text-navy-600 text-xl font-semibold mb-2 group-hover:text-gold-600 transition-colors">
                    {t(award.titleKey)}
                  </h3>

                  <!-- Organization -->
                  <p class="text-gold-500 font-medium mb-3">{award.organization}</p>

                  <!-- Description -->
                  <p class="text-gray-600">{award.description}</p>
                </div>
              </div>

              <!-- Timeline Dot -->
              <div class="absolute left-8 md:left-1/2 w-4 h-4 bg-gold-500 rounded-full border-4 border-white shadow-lg md:-translate-x-1/2 mt-8">
                <!-- Pulse Animation -->
                <div class="absolute inset-0 bg-gold-500 rounded-full animate-ping opacity-20"></div>
              </div>

              <!-- Spacer for alternating layout -->
              <div class="hidden md:block flex-1"></div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Recognition -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="text-center max-w-2xl mx-auto mb-12 animate-on-scroll">
        <h2 class="text-navy-600 mb-4">Marathi Rangbhumi Recognition</h2>
        <p class="text-gray-600 text-lg">Honored by the prestigious Marathi theatre community for contributions to the art form.</p>
      </div>

      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden animate-on-scroll">
          <div class="grid md:grid-cols-2">
            <img
              src="/images/gallery/awards/FB_IMG_1767103857721.jpg"
              alt="Marathi Rangbhumi Award"
              class="w-full h-full object-cover"
            />
            <div class="p-8 flex flex-col justify-center">
              <div class="text-gold-500 text-4xl mb-4">üèÜ</div>
              <h3 class="text-navy-600 text-2xl font-semibold mb-4">Theatre Excellence</h3>
              <p class="text-gray-600 mb-6">
                Recognized for exceptional contribution to Marathi theatre and performing arts. The award celebrates dedication to preserving and promoting the rich theatrical heritage of Maharashtra.
              </p>
              <div class="flex items-center gap-4">
                <img
                  src="/images/headshots/niranjan-speaking.jpg"
                  alt="Niranjan"
                  class="w-12 h-12 rounded-full object-cover"
                />
                <div>
                  <p class="text-navy-600 font-semibold">Niranjan Kulkarni</p>
                  <p class="text-gray-500 text-sm">Theatre Artist & Performer</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-navy-600">
    <div class="container-custom text-center">
      <h2 class="text-white mb-6 animate-on-scroll">Hire an Award-Winning Professional</h2>
      <p class="text-white/70 text-xl mb-8 max-w-2xl mx-auto animate-on-scroll">
        Bring excellence and experience to your next event or training program.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-on-scroll">
        <a href={`https://wa.me/${contactInfo.whatsapp}`} class="btn-gold">
          Contact Now
        </a>
        <a href={getLocalizedPath('/services', lang)} class="btn-outline-gold border-white/30 text-white hover:bg-white/10">
          View Services
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
