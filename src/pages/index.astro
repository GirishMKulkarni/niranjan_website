---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/home/HeroSection.astro';
import AboutPreview from '../components/home/AboutPreview.astro';
import ServicesPreview from '../components/home/ServicesPreview.astro';
import VideoShowcase from '../components/home/VideoShowcase.astro';
import StatsCounter from '../components/home/StatsCounter.astro';
import TestimonialsTicker from '../components/home/TestimonialsTicker.astro';
import GalleryPreview from '../components/home/GalleryPreview.astro';
import AwardsHighlight from '../components/home/AwardsHighlight.astro';
import CTASection from '../components/home/CTASection.astro';
import { getLangFromUrl, useTranslations } from '../i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout
  title={t('site.title')}
  description={t('site.description')}
  lang={lang}
  pageType="home"
>
  <!-- Hero Section -->
  <HeroSection lang={lang} />

  <!-- About Preview -->
  <AboutPreview lang={lang} />

  <!-- Services Preview -->
  <ServicesPreview lang={lang} />

  <!-- Video Showcase -->
  <VideoShowcase lang={lang} />

  <!-- Stats Counter -->
  <StatsCounter lang={lang} />

  <!-- Gallery Preview -->
  <GalleryPreview lang={lang} />

  <!-- Testimonials -->
  <TestimonialsTicker lang={lang} />

  <!-- Awards Highlight -->
  <AwardsHighlight lang={lang} />

  <!-- CTA Section -->
  <CTASection lang={lang} />
</BaseLayout>
