---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n';
import { services } from '../data/services';
import { contactInfo } from '../data/contact';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const base = import.meta.env.BASE_URL;
---

<BaseLayout
  title={`${t('services.title')} | ${t('site.title')}`}
  description={t('services.subtitle')}
  lang={lang}
>
  <!-- Hero Section -->
  <section class="relative py-20 bg-navy-600 overflow-hidden">
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-0 right-0 w-96 h-96 bg-gold-500 rounded-full blur-3xl"></div>
    </div>
    <div class="container-custom relative z-10">
      <div class="max-w-3xl">
        <span class="text-gold-400 font-semibold text-sm tracking-wider uppercase mb-4 block animate-fade-up">
          What I Offer
        </span>
        <h1 class="text-white mb-6 animate-fade-up" style="animation-delay: 0.1s;">
          {t('services.title')}
        </h1>
        <p class="text-white/70 text-xl animate-fade-up" style="animation-delay: 0.2s;">
          {t('services.subtitle')}
        </p>
      </div>
    </div>
  </section>

  <!-- Training Philosophy -->
  <section class="py-16 bg-gold-50">
    <div class="container-custom">
      <div class="grid md:grid-cols-3 gap-8 text-center">
        {[
          { icon: 'ðŸŽ­', title: 'Theatre-Based', desc: 'Learning through expression and role-play' },
          { icon: 'ðŸŽ¯', title: 'Result-Oriented', desc: 'Focus on real behavioral change' },
          { icon: 'ðŸ¤', title: 'Interactive', desc: 'Engaging activities and discussions' }
        ].map((item) => (
          <div class="animate-on-scroll">
            <div class="text-4xl mb-4">{item.icon}</div>
            <h3 class="text-navy-600 text-lg font-semibold mb-2">{item.title}</h3>
            <p class="text-gray-600">{item.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- All Services -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="text-center max-w-2xl mx-auto mb-16 animate-on-scroll">
        <h2 class="text-navy-600 mb-4">Complete Service Catalog</h2>
        <p class="text-gray-600 text-lg">12-month comprehensive training programs tailored for corporates, manufacturing, and institutions.</p>
      </div>

      <!-- Services Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map((service, index) => (
          <div
            id={service.id}
            class="group bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 border-2 border-transparent hover:border-gold-400 animate-on-scroll"
            style={`animation-delay: ${index * 0.05}s`}
          >
            <!-- Icon -->
            <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-gold-100 to-gold-200 flex items-center justify-center text-3xl mb-6 group-hover:scale-110 transition-transform">
              {service.icon}
            </div>

            <!-- Title -->
            <h3 class="text-navy-600 text-xl font-semibold mb-3 group-hover:text-gold-600 transition-colors">
              {t(service.titleKey)}
            </h3>

            <!-- Description -->
            <p class="text-gray-600 mb-6">
              {service.descriptionKey}
            </p>

            <!-- Features -->
            <ul class="space-y-2 mb-6">
              {service.features.map((feature) => (
                <li class="flex items-start gap-2 text-sm text-gray-500">
                  <svg class="w-5 h-5 text-gold-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>

            <!-- Category Badge -->
            <span class="inline-block px-3 py-1 bg-navy-100 text-navy-600 rounded-full text-xs font-medium capitalize">
              {service.category}
            </span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Event Anchoring Special Section -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="animate-on-scroll">
          <span class="text-gold-500 font-semibold text-sm tracking-wider uppercase mb-2 block">
            Professional Hosting
          </span>
          <h2 class="text-navy-600 mb-6">{t('services.anchoring_title')}</h2>
          <p class="text-gray-600 text-lg mb-6">
            With 10+ years of stage experience, I bring energy, professionalism, and perfect coordination to every event. Whether corporate, cultural, musical, or social - your event deserves an exceptional host.
          </p>

          <div class="grid sm:grid-cols-2 gap-4 mb-8">
            {['Corporate Events', 'Musical Evenings', 'Social Gatherings', 'Cultural Programs', 'Award Functions', 'Product Launches'].map((type) => (
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-gold-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="text-navy-600">{type}</span>
              </div>
            ))}
          </div>

          <a href={`https://wa.me/${contactInfo.whatsapp}?text=Hi%20Niranjan,%20I%20need%20an%20event%20anchor.`} class="btn-gold inline-flex items-center gap-2">
            Book for Your Event
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>

        <div class="grid grid-cols-2 gap-4 animate-on-scroll">
          <img src={`${base}images/gallery/anchoring/FB_IMG_1767103843647.jpg`} alt="Event anchoring" class="rounded-2xl shadow-lg w-full h-48 object-cover" />
          <img src={`${base}images/gallery/anchoring/FB_IMG_1767103816392.jpg`} alt="Corporate hosting" class="rounded-2xl shadow-lg w-full h-48 object-cover mt-8" />
        </div>
      </div>
    </div>
  </section>

  <!-- Languages -->
  <section class="py-16 bg-white">
    <div class="container-custom">
      <div class="text-center max-w-2xl mx-auto animate-on-scroll">
        <h2 class="text-navy-600 mb-4">Training Languages</h2>
        <p class="text-gray-600 mb-8">All programs available in three languages for maximum reach and impact.</p>
        <div class="flex justify-center gap-6">
          {[
            { lang: 'English', flag: 'ðŸ‡¬ðŸ‡§' },
            { lang: 'à¤¹à¤¿à¤‚à¤¦à¥€', flag: 'ðŸ‡®ðŸ‡³' },
            { lang: 'à¤®à¤°à¤¾à¤ à¥€', flag: 'ðŸ³ï¸' }
          ].map((item) => (
            <div class="px-8 py-4 bg-gray-50 rounded-2xl text-center">
              <span class="text-3xl mb-2 block">{item.flag}</span>
              <span class="text-navy-600 font-semibold">{item.lang}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-navy-600">
    <div class="container-custom text-center">
      <h2 class="text-white mb-6 animate-on-scroll">Need a Customized Training Program?</h2>
      <p class="text-white/70 text-xl mb-8 max-w-2xl mx-auto animate-on-scroll">
        Let's discuss your specific requirements and create a tailored solution for your organization.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-on-scroll">
        <a href={`https://wa.me/${contactInfo.whatsapp}`} class="btn-gold">
          Discuss Requirements
        </a>
        <a href={getLocalizedPath('/contact', lang)} class="btn-outline-gold border-white/30 text-white hover:bg-white/10">
          Send Inquiry
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
