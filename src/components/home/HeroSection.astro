---
import { useTranslations, type Language } from '../../i18n';
import { contactInfo } from '../../data/contact';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const base = import.meta.env.BASE_URL;

// Images with their focus positions (where the subject is)
const heroImages = [
  { src: `${base}images/headshots/niranjan-speaking.jpg`, position: 'object-[center_20%]' },
  { src: `${base}images/hero/podcast-studio.jpg`, position: 'object-center' },
  { src: `${base}images/gallery/theatre/Hambirrao Niranjan.png`, position: 'object-[center_15%]' }
];
---

<section class="relative min-h-screen flex items-center overflow-hidden bg-navy-600">
  <!-- Background Image Carousel -->
  <div class="absolute inset-0 z-0">
    <div class="hero-carousel relative w-full h-full">
      {heroImages.map((img, index) => (
        <div
          class={`hero-slide absolute inset-0 transition-opacity duration-1000 ${index === 0 ? 'opacity-100' : 'opacity-0'}`}
          data-index={index}
        >
          <img
            src={img.src}
            alt="Niranjan Kulkarni"
            class={`w-full h-full object-cover ${img.position}`}
            style="animation: ken-burns-subtle 25s ease-in-out infinite alternate;"
          />
        </div>
      ))}
    </div>
    <!-- Overlay - adjusted for better image visibility -->
    <div class="absolute inset-0 bg-gradient-to-r from-navy-900/90 via-navy-900/70 to-navy-900/50"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 container-custom py-20">
    <div class="max-w-3xl">
      <!-- Greeting Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 mb-6 animate-fade-up" style="animation-delay: 0.1s;">
        <span class="w-2 h-2 rounded-full bg-gold-500 animate-pulse"></span>
        <span class="text-white/90 text-sm font-medium">{t('hero.greeting')}</span>
      </div>

      <!-- Brand Name -->
      <h1 class="text-5xl md:text-7xl font-bold text-white mb-4 animate-fade-up" style="animation-delay: 0.2s;" transition:name="hero-title">
        <span class="text-gradient-gold">{t('hero.brand')}</span>
      </h1>

      <!-- Full Name -->
      <h2 class="text-2xl md:text-4xl font-semibold text-white/90 mb-4 animate-fade-up" style="animation-delay: 0.3s;">
        {t('hero.name')}
      </h2>

      <!-- Roles -->
      <div class="flex flex-wrap gap-2 mb-6 animate-fade-up" style="animation-delay: 0.4s;">
        {['Trainer', 'Anchor', 'Theatre Artist', 'Speaker'].map((role) => (
          <span class="px-3 py-1 rounded-full bg-gold-500/20 text-gold-400 text-sm font-medium border border-gold-500/30">
            {role}
          </span>
        ))}
      </div>

      <!-- Tagline with Typewriter Effect -->
      <p class="text-xl md:text-2xl text-white/80 mb-8 animate-fade-up" style="animation-delay: 0.5s;">
        <span class="typewriter" data-text={t('hero.tagline')}>{t('hero.tagline')}</span>
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 animate-fade-up" style="animation-delay: 0.6s;">
        <a
          href={`https://wa.me/${contactInfo.whatsapp}`}
          target="_blank"
          rel="noopener noreferrer"
          class="btn-gold inline-flex items-center justify-center gap-2"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          {t('hero.cta_primary')}
        </a>
        <a
          href="#services"
          class="btn-outline-gold inline-flex items-center justify-center gap-2 border-white/30 text-white hover:bg-white/10 hover:border-white/50"
        >
          {t('hero.cta_secondary')}
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 animate-bounce">
    <a href="#about-preview" class="flex flex-col items-center text-white/60 hover:text-white transition-colors">
      <span class="text-xs mb-2">Scroll</span>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </a>
  </div>

  <!-- Carousel Indicators -->
  <div class="absolute bottom-8 right-8 z-10 flex gap-2">
    {heroImages.map((img, index) => (
      <button
        class={`carousel-dot w-3 h-3 rounded-full transition-all ${index === 0 ? 'bg-gold-500 w-8' : 'bg-white/30 hover:bg-white/50'}`}
        data-index={index}
        aria-label={`Go to slide ${index + 1}`}
      ></button>
    ))}
  </div>
</section>

<script>
  function initHeroCarousel() {
    const slides = document.querySelectorAll('.hero-slide');
    const dots = document.querySelectorAll('.carousel-dot');
    let currentSlide = 0;
    const totalSlides = slides.length;
    let interval: ReturnType<typeof setInterval>;

    function goToSlide(index: number) {
      slides.forEach((slide, i) => {
        slide.classList.toggle('opacity-100', i === index);
        slide.classList.toggle('opacity-0', i !== index);
      });

      dots.forEach((dot, i) => {
        dot.classList.toggle('bg-gold-500', i === index);
        dot.classList.toggle('w-8', i === index);
        dot.classList.toggle('bg-white/30', i !== index);
        dot.classList.toggle('w-3', i !== index);
      });

      currentSlide = index;
    }

    function nextSlide() {
      goToSlide((currentSlide + 1) % totalSlides);
    }

    function startAutoplay() {
      interval = setInterval(nextSlide, 5000);
    }

    function stopAutoplay() {
      clearInterval(interval);
    }

    // Click handlers for dots
    dots.forEach((dot) => {
      dot.addEventListener('click', () => {
        const index = parseInt(dot.getAttribute('data-index') || '0');
        goToSlide(index);
        stopAutoplay();
        startAutoplay();
      });
    });

    startAutoplay();
  }

  initHeroCarousel();
  document.addEventListener('astro:after-swap', initHeroCarousel);
</script>
