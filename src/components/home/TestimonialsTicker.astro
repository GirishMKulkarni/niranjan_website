---
import { useTranslations, type Language } from '../../i18n';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const base = import.meta.env.BASE_URL;

const screenshotTestimonials = [
  { src: 'diveagar.jpeg', alt: 'Client Testimonial - Diveagar' },
  { src: 'expandx.jpeg', alt: 'Client Testimonial - ExpandX' },
  { src: 'kakde.jpeg', alt: 'Client Testimonial - Kakde' },
  { src: 'lurall.jpeg', alt: 'Client Testimonial - Lurall' },
];
---

<section class="section-padding bg-white">
  <div class="container-custom">
    <div class="text-center max-w-2xl mx-auto mb-12 animate-on-scroll">
      <span class="text-gold-500 font-semibold text-sm tracking-wider uppercase mb-2 block">
        Testimonials
      </span>
      <h2 class="text-navy-600 mb-4">{t('testimonials.title')}</h2>
      <p class="text-gray-600 text-lg">{t('testimonials.subtitle')}</p>
    </div>

    <!-- Video Testimonials -->
    <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto mb-12">
      <div class="animate-on-scroll">
        <div class="rounded-2xl overflow-hidden shadow-xl">
          <video
            controls
            class="w-full"
            poster={`${base}images/testimonials/video-thumbnail.jpg`}
          >
            <source src={`${base}images/testimonials/video.mp4`} type="video/mp4" />
            Your browser does not support the video tag.
          </video>
        </div>
      </div>
      <div class="animate-on-scroll">
        <div class="rounded-2xl overflow-hidden shadow-xl">
          <video
            controls
            class="w-full"
            poster={`${base}images/testimonials/joshi-thumbnail.jpg`}
          >
            <source src={`${base}images/testimonials/joshi.mp4`} type="video/mp4" />
            Your browser does not support the video tag.
          </video>
        </div>
      </div>
    </div>

    <!-- Screenshot Testimonials Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
      {screenshotTestimonials.map((testimonial, index) => (
        <div class="animate-on-scroll">
          <div
            class="testimonial-thumb rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow border border-gray-100 hover:border-gold-200 cursor-pointer group relative"
            data-index={index}
          >
            <img
              src={`${base}images/testimonials/${testimonial.src}`}
              alt={testimonial.alt}
              class="w-full h-auto object-cover group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
            />
            <!-- Zoom Icon -->
            <div class="absolute inset-0 bg-navy-900/20 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
              <div class="w-12 h-12 bg-white/90 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-navy-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"/>
                </svg>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Testimonial Lightbox -->
<div id="testimonial-lightbox" class="fixed inset-0 z-50 hidden bg-black/90 flex items-center justify-center p-4">
  <!-- Close Button -->
  <button id="testimonial-lightbox-close" class="absolute top-4 right-4 text-white/80 hover:text-white p-2 z-10">
    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
    </svg>
  </button>

  <!-- Navigation -->
  <button id="testimonial-lightbox-prev" class="absolute left-4 text-white/80 hover:text-white p-2">
    <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
  </button>
  <button id="testimonial-lightbox-next" class="absolute right-4 text-white/80 hover:text-white p-2">
    <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
    </svg>
  </button>

  <!-- Image Container -->
  <div class="max-w-4xl max-h-[90vh] overflow-auto">
    <img id="testimonial-lightbox-image" src="" alt="" class="max-w-full max-h-[90vh] object-contain rounded-lg" />
  </div>
</div>

<script define:vars={{ testimonials: screenshotTestimonials, base }}>
  function initTestimonialLightbox() {
    const thumbs = document.querySelectorAll('.testimonial-thumb');
    const lightbox = document.getElementById('testimonial-lightbox');
    const lightboxImage = document.getElementById('testimonial-lightbox-image');
    const closeBtn = document.getElementById('testimonial-lightbox-close');
    const prevBtn = document.getElementById('testimonial-lightbox-prev');
    const nextBtn = document.getElementById('testimonial-lightbox-next');

    let currentIndex = 0;

    function openLightbox(index) {
      currentIndex = index;
      updateLightbox();
      lightbox.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }

    function closeLightbox() {
      lightbox.classList.add('hidden');
      document.body.style.overflow = '';
    }

    function updateLightbox() {
      const testimonial = testimonials[currentIndex];
      lightboxImage.src = `${base}images/testimonials/${testimonial.src}`;
      lightboxImage.alt = testimonial.alt;
    }

    function nextImage() {
      currentIndex = (currentIndex + 1) % testimonials.length;
      updateLightbox();
    }

    function prevImage() {
      currentIndex = (currentIndex - 1 + testimonials.length) % testimonials.length;
      updateLightbox();
    }

    thumbs.forEach((thumb) => {
      thumb.addEventListener('click', () => {
        const index = parseInt(thumb.dataset.index);
        openLightbox(index);
      });
    });

    closeBtn?.addEventListener('click', closeLightbox);
    prevBtn?.addEventListener('click', prevImage);
    nextBtn?.addEventListener('click', nextImage);

    lightbox?.addEventListener('click', (e) => {
      if (e.target === lightbox) closeLightbox();
    });

    document.addEventListener('keydown', (e) => {
      if (lightbox?.classList.contains('hidden')) return;
      if (e.key === 'Escape') closeLightbox();
      if (e.key === 'ArrowRight') nextImage();
      if (e.key === 'ArrowLeft') prevImage();
    });
  }

  initTestimonialLightbox();
  document.addEventListener('astro:after-swap', initTestimonialLightbox);
</script>
